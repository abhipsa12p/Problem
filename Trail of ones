class Solution {
  public:
    int numberOfConsecutiveOnes(int n) {
        // code here
         int ans=0;
        int a=0;
        int b=1;
        for(int i=2;i<=n;i++){
            ans=((ans*2)%1000000007+b)%1000000007;
            int temp=b;
            b=(a+b)%1000000007;
            a=temp;
        }
        return ans%1000000007;
    }
};
